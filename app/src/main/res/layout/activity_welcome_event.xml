<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.senarios.coneqtlive.Views.ConeqtCreator.WelcomeEvent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal">

    </TextView>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:lineSpacingExtra="@dimen/_4sdp"
        android:paddingStart="@dimen/_55sdp"
        android:paddingEnd="@dimen/_55sdp"
        android:text="Welcome to the App if you want to Create Event then click here."
        android:textColor="#E5E5E5"
        android:textSize="16sp"
        android:textStyle="normal">

    </TextView>

    <RelativeLayout
        android:id="@+id/idVerifyPhoneBtn"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/description"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_100sdp">

        <TextView
            android:id="@+id/idLoginBtnLogin"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:background="@drawable/btn_overview_white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:src="@drawable/logo_app"
            android:text="Create Event"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="normal"  />
    </RelativeLayout>

</RelativeLayout>